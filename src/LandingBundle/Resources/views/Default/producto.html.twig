<!DOCTYPE html>

<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Producto{{numero}}{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{asset('css/style.css')}}">
        {% endblock %}
    </head>
    <body>
        {% block body %}<h1>Producto {{numero}}</h1><br>
        <div>
        {% if numero==1 %}
            <img src="{{asset('img/img1.jpg')}}"><br><br>
        {% elseif numero==2 %}
        <img src="{{asset('img/img2.jpg')}}"><br><br>
        {% endif %}
        <a class="btn" href="/">Volver</a>
        </div>
        {% endblock %}
    </body>
</html>